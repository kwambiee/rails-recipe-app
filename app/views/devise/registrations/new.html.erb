<div class="container text-center">

<h2>Sign up</h2>
<div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autocomplete: "name", placeholder:"name", class: 'form-control mt-4' %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mt-4' %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control mt-4'%>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control mt-4' %>
      </div>

      <div class="actions">
    <%= f.submit "Sign up", class: 'form-control btn btn-primary mt-4' %>
  </div>
  <% end %>
</div>
  <%= render "devise/shared/links" %>
</div>

